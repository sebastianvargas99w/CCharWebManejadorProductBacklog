@model ProyectoPP.Models.criteriosDeAceptacion

@{
    ViewBag.Title = "CrearCriterio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Insertar Criterio de Aceptación</h2>
<div class="form-horizontal">
    @using (Html.BeginForm("CreaarCriterio", "historiasDeUsuarios", FormMethod.Post))
    {
        @Html.AntiForgeryToken()



        <h4>@(Model.idHU)</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => Model.idHU)
        <div class="form-group">

            <div class="col-md-10">
                <label>Nombre</label>
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                <label>Contexto</label>
                @Html.EditorFor(model => model.contexto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.contexto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                <label>Evento</label>
                @Html.EditorFor(model => model.evento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.evento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                <label>Resultado</label>
                @Html.EditorFor(model => model.resultado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.resultado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                <label>Número de Escenario</label>
                @Html.EditorFor(model => model.numeroEscenario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.numeroEscenario, "", new { @class = "text-danger" })
            </div>
        </div>

        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aceptar" class="btn btn-default" />
                
            </div>
            
        </div>



    }
    <div class="col-md-offset-2 col-md-10">
        <button class="btn btn-default" onclick="location.href='@Url.Action("CrearCriterio", "historiasDeUsuarios", new { hu = Model.idHU})'">Cancelar</button>

        </div>
    </div>












