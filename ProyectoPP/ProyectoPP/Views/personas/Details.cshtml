@model ProyectoPP.Models.PersonaConRol

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles de Usuario</h2>

<div>
       
    <div class="form-group">
        <div class="col-md-offset-6 col-md-10">
            <!--Estos botones funcionan como los action links. Solo que el orden de los parametros es un poco distinto en el orden-->
            <button class="btn btn-default" onclick="location.href='@Url.Action("Edit", "personas", new { id = Model.cedula })'">Editar</button>
            @if(true)
            {
                string resp = Html.Action("RevisarPermisosB", "Roles", new{ permiso = "Borrar usuarios" }).ToString();
                if ( resp == "1" )
                {
                <button class="btn btn-default" onclick="location.href='@Url.Action("Delete", "personas", new { id = Model.cedula })'">Eliminar</button>
                }
            }
            
        </div>
    </div>

    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.carne)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.carne)
        </dd>

        <br/>

        <dt>
            @Html.DisplayNameFor(model => model.cedula)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.cedula)
        </dd>
        <br/>
        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <br/>
        <dt>
            @Html.DisplayNameFor(model => model.apellido1)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.apellido1)
        </dd>
        <br/>
        <dt>
            @Html.DisplayNameFor(model => model.apellido2)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.apellido2)
        </dd>
        <br/>
        <dt>
            @Html.DisplayNameFor(model => model.email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>
        <br/>
        <dt>
            @Html.DisplayNameFor(model => model.rol)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.rol)
        </dd>

    </dl>
</div>
