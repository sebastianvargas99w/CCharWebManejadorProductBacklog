@model ProyectoPP.Models.criteriosDeAceptacion

@{
    ViewBag.Title = "EditarCriterio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Criterio</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idHU)

        @Html.HiddenFor(model => model.numCriterio)

        <div class="form-group">
            <div class="col-md-10">
                <label>Historia de Usuario</label>
                <label>@(Model.idHU)</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Nombre</label>
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Contexto</label>
                @Html.EditorFor(model => model.contexto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.contexto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-10">
                <label>Evento</label>
                @Html.EditorFor(model => model.evento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.evento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
          
            <div class="col-md-10">
                <label>Resultado</label>
                @Html.EditorFor(model => model.resultado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.resultado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-10">
                <label>Número de Escenario</label>
                @Html.EditorFor(model => model.numeroEscenario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.numeroEscenario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aceptar" class="btn btn-default" />
                <button class="btn btn-default" onclick="location.href='@Url.Action("EditarCriterio", "historiasDeUsuarios", new { id = Model.numCriterio})'">Cancelar</button>
            </div>
        </div>
    </div>
}