@model ProyectoPP.Models.tarea

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles de Tarea</h2>

<div>
    <div class="form-group">
        <div class="col-md-offset-6 col-md-10">
            <!--Estos botones funcionan como los action links. Solo que el orden de los parametros es un poco distinto en el orden-->
            <button class="btn btn-default" onclick="location.href='@Url.Action("Edit", "tareas", new { HU = Model.HU, id = Model.id })'">Editar</button>
            
            <button class="btn btn-default" onclick="location.href='@Url.Action("Delete", "tareas", new { HU = Model.HU, id = Model.id })'">Eliminar</button>

        </div>
    </div>

    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <br />

        <dt>
            @Html.DisplayNameFor(model => model.esfuerzo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.esfuerzo)
        </dd>

        <br />

        <dt>
            @Html.DisplayNameFor(model => model.historiasDeUsuario.id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.historiasDeUsuario.id)
        </dd>

        <br />
        
    </dl>
</div>

<br>
<h2>Progreso</h2>
<br>

<div class="form-group">
    <div class="col-md-offset-10 col-md-10">
        <!--Estos botones funcionan como los action links. Solo que el orden de los parametros es un poco distinto en el orden-->
        <button class="btn btn-default" onclick="location.href='@Url.Action("addProgreso", "tareas", new { HU = Model.HU, id = Model.id })'">Agregar Progreso</button>
        <br>
        <br>
    </div>
</div>

<table class="table">

    <tr>
        <th>
            Fecha
        </th>

        <th>
            Progreso
        </th>
    </tr>

    @foreach (var item in Model.progreso)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.fechaCorte)
            </td>

            <td>
                @Html.DisplayFor(model => item.porcentaje)
            </td>
        </tr>
    }


</table>
