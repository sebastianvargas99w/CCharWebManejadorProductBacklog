@model ProyectoPP.Models.criteriosDeAceptacion

@{
    ViewBag.Title = "EliminarCriterio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar Criterio de Aceptación</h2>

<h3>¿Está seguro que desea eliminar este elemento?</h3>
@using (Html.BeginForm("EliminarCriterio", "historiasDeUsuarios", FormMethod.Post))
    {
    @Html.AntiForgeryToken()
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Nombre</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nombre)<br /><br />
            @Html.HiddenFor(model => Model.numCriterio)
            @Html.HiddenFor(model => Model.idHU)
            <br>
        </dd>

        <dt>
            <label>Conexto</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.contexto)<br /><br />
            <br>
        </dd>

        <dt>
            <label>Evento</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.evento)<br /><br />
            <br>
        </dd>

        <dt>
            <label>Resultado</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.resultado)<br /><br />
            <br>
        </dd>

        <dt>
            <label>Número de Escenario</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numeroEscenario)<br /><br />
            <br>
        </dd>
        
    </dl>

   

    <div class="form-group">
        <div class="form-actions no-color">
            <input type="submit" value="Aceptar" class="btn btn-default" />
            <button class="btn btn-default" onclick="location.href='@Url.Action("DetallesCriterios", "historiasDeUsuarios", new {idHu = Model.idHU, id =Model.numCriterio})'">Cancelar</button>
        </div>

        </div>

    </div>
}
